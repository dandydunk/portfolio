<script>
  $(document).ready(function(){
      $("#buttonRegister").click(function(){
          $(this).attr("disabled", "disabled");
          var self = $(this);
          var data = {"email":$("#email").val(),
                      "password":$("#password").val(),
                      "passwordConfirm":$("#passwordConfirm").val()};
          var ajax = $.post("/user/registerPost", data, function(data){
              if(data.error) {
                  alert(data.error);
              }

              $(self).removeAttr("disabled");
          }, "json");

          ajax.fail(function(){
              alert("ajax failed.");
              $(self).removeAttr("disabled");
          });
      });
  });
</script>

<div class="row">
  <div class="registerPanel" style="margin:0 auto; width:50%;">
    <div class="row">
      <div class="col-lg-12">
        <input type="text" placeholder="email" id="email" class="textField">
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <input type="text" placeholder="password" id="password" class="textField">
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <input type="text" placeholder="password confirm" id="passwordConfirm" class="textField">
      </div>
    </div>

    <div class="row">
      <div class="col-lg-2">
        <button class="btn btn-default" id="buttonRegister">REGISTER</button>
      </div>

      <div class="col-lg-2">
        <a href="/user/login/">Login</a>
      </div>
    </div>
  </div>
</div>